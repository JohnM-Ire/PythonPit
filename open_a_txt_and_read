
import os

def main():

    #To open and view the contents of a text file
    
    #getting current directory
    working_directory = os.getcwd()
    print(working_directory)

    newfile_cities= open('..\..\..\Chapter 07\cities.txt', 'r') #newfile_cities= open('link\to\txtfile', 'r') r=read, w=write, a=append

    contents_cities= newfile_cities.read()
    print(contents_cities)

    newfile_cities.close()

main()
  
